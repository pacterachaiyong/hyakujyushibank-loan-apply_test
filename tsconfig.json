{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    // "allowJs": true,
    // "checkJs": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    // "moduleResolution": "classic",
    // "noUnusedLocals": true, //不允许未使用的变量
    // "noUnusedParameters": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "jest", "webpack-env", "lodash"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.vue", "./tests/**/*.ts", "./tests/**/*.tsx", "./src/**/*.jsx"]
}
